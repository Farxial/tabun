.comments-header
  margin-bottom 10px
  position relative
  h3
    font-size 20px
    margin-bottom 5px
  .subscribe
    position absolute
    top 15px
    right 0
    font-size 11px
    color #7b848d
    input
      top 2px

.comments
  margin-bottom 30px
  &.comment-list
    .comment
      margin-bottom 12px
    .comment-path
      font-size 11px
      color #a2b6cd
      .comment-path-topic
        color #275ec2

.comment-wrapper
  position relative
  .comment-wrapper
    padding-left 14px
  .reply
    margin-left 40px

.comment-preview
  padding 5px 10px 16px
  margin-bottom 10px
  background #fafafa
  border 1px solid #eee
  border-radius 3px
  font-size 13px
  line-height 1.6em

#form_comment
  margin-bottom 16px

.comment
  min-height 48px
  padding 0 0 10px
  position relative
  background #fff
  .deleted
    padding 16px 10px
    color #777
    background #f4f4f4
  .comment-avatar
    position absolute
    top -5px
    left 0
    width 18px
    height 18px
  .folding
    width 13px
    height 13px
    position absolute
    top 8px
    left -16px
    background url(images/icons-synio.png) 0 -94px no-repeat
    cursor pointer
    &.folded
      background-position -13px -94px
  &.comment-deleted
    .comment-content
      background #c5c5c5
      border-color #C8A8A8
      &:after
        border-color #C8A8A8 transparent transparent
      &:before
        border-color #c5c5c5 transparent transparent
  &.comment-self
    .comment-content
      background #fff
      &:after
        border-color #e6e6bd transparent transparent
      &:before
        border-color #fefef1 transparent transparent
  &.comment-new
    .comment-content
      background #edf7ed
      &:after
        border-color #dddb5c transparent transparent
      &:before
        border-color #fff transparent transparent
  &.comment-current
    .comment-content
      background #ffebeb
      border-color #B17979
      &:after
        border-color #bae48e transparent transparent
      &:before
        border-color #cdf5a6 transparent transparent
  .comment-info
    li
      &.comment-hide
        a
          color #CCC
          cursor pointer
  &.comment-hidden
    .comment-info
      .edit
        display none
  .comment-actions
    li
      display inline
      margin-right 10px

.comments.comment-list .comment-path .blog-name,
.comments.comment-list .comment-path .comment-path-comments
  color #000

  .comment
    &.comment-hidden
      .comment-info
        li
          &.comment-hide
            display none

.ls-user-role-not-admin
  .comment
    &.comment-deleted
      display none

.comment-info
  display flex
  flex-flow row
  flex-wrap wrap
  align-items flex-end
  padding 0 50px 0 25px
  line-height 13px
  position relative
  overflow visible
  font-size 11px
  li
    height 18px
    margin-right 15px
    &.comment-author
      a
        font-weight bold
        color #444
      &.comment-topic-author
        a
          color #4b5468
    a
      &.delete
        color #ccc
      &.link-dotted
        color #09f
        text-decoration none
        border-bottom 1px dotted #09f
        &:hover
          color #f00
          border-color #f00
    &.comment-date
      color #999
    &.goto
      a
        color #a2b6cd
        text-decoration none
        display inline-block
        width 14px
        height 14px
        text-indent 20px
        overflow hidden
        background transparent url(images/jquery-ui/ui-icons_2e83ff_256x240.png) no-repeat
      &.goto-comment-parent
        a
          background-position -161px -193px
      &.goto-comment-child
        a 
          background-position -129px -193px
    .favourite-count
      color #a2b6cd
    &.vote
      position absolute
      top 0
      right 0
      margin 0
      display flex
      flex-flow row
      align-items center
      .vote-up,.vote-down
        cursor pointer
      .vote-count
        cursor default
        color #949aa1
        font-weight bold
        font-size 12px
        margin 0
        padding 0 3px
        line-height 18px
      &.vote-count-positive
        .vote-count
          color #51983c
      &.vote-count-negative
        .vote-count
          color #da4242
    &.goto-comment-child
      display none

div
  &.favourite
    text-decoration underline
    color #999
    &:hover
      text-decoration none

.comment-content
  background-color #f7f7f7
  margin-bottom 10px
  border 1px solid #e7ebed
  padding 5px 10px
  border-radius 5px
  position relative
  &.text
    blockquote
      background #fff
      border-color #ccc
      padding 5px 10px
      margin 5px 0
      & + br
        display none
  &:after
    display block
    position absolute
    bottom -12px
    left 10px
    width 0
    height 0
    border-width 6px
    border-color #e7ebed transparent transparent
    border-style solid
  &:before
    display block
    position absolute
    bottom -11px
    left 10px
    width 0
    height 0
    border-width 6px
    border-color #fff transparent transparent
    border-style solid
    z-index 10

.reply-header
  font-size 20px
  line-height 1.3em
  margin-bottom 15px

.reply
  textarea
    height 100px
    &.loader
      background #f7f7f7 url(images/loader.gif) no-repeat center
  .mceEditor
    display block
    margin-bottom 10px

.modify-notice
  font-size 10px
  font-style italic
  .self-modified
    color #69b55b
  .adm-modified
    color #aaaa00
  .hard-modified
    color #d5883c

.comment:not(.editable)
  .comment-save-edit-bw,
  .comment-preview-edit-bw,
  .comment-cancel-edit-bw,
  .comment-lock-edit-bw
    display none
  
.comment
  .text.preview
    margin-bottom 7px

.comment.editable
  .comment-content
    .edit-form,
    .edit-form>label
      display block
    .text.current
      display none
  .comment-edit-bw
      display none

.comments-not-allowed
    font-size 16px
    padding 5px 10px
    border-radius 5px
    border 1px solid #e3e3e3
    background-color #eee

.comment-bad 
  .text 
    color #ccc
    img, iframe
      opacity 0
    a
      color #ccc

.comment-bad:hover 
  .text
    color inherit
    img, iframe
      opacity inherit
    a
      color #09f
    .ls-user
      color black

#quote
  background #fff
  color #333
  position absolute
  z-index 999
  display inline-block
  font 12px/15px Arial
  border 1px solid #777
  border-radius 5px
  cursor pointer
#quote:hover
  background-color #eef
#quote>i,#quote>b
  display inline-block
  background transparent url(images/markitup/edit.png) scroll -208px 0 no-repeat
  height 16px
  width 16px
#quote>b
  transform rotate(180deg)